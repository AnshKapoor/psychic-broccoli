{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "noise_data.xlsx",
                "adsb/data_2022_april.joblib",
                "--noise-output",
                "noise_with_matches.csv",
                "--traj-output",
                "matched_trajs.parquet",
                "--tol-sec",
                "10",
                "--buffer-frac",
                "0.5",
                "--window-min",
                "3",
                "--test-mode",
                "true",
                "--test-mode-match-limit",
                "5"
            ]
        },
        {
            "name": "Backbone Clustering (Test Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "-c",
                "config/backbone.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Backbone Clustering (Full Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "-c",
                "config/backbone_full.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
